{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "noEmitOnError": true,  
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}